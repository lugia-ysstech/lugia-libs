{
  "name": "@lugia/libs",
  "version": "1.0.0",
  "description": "A scaffolding of Lerna.",
  "author": "@lugia",
  "license": "ISC",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "node ./scripts/build.js --watch",
    "build": "node ./scripts/build.js",
    "new": "node ./scripts/new.js",
    "changelog": "lerna-changelog",
    "lerna": "lerna",
    "test": "jest --config=jest.config.js --env=jsdom --watch",
    "coverage": "jest --config=jest.config.js --env=jsdom --coverage --all",
    "prettier": "prettier  --write packages/**/*.ts  --parser typescript",
    "postinstall": "yarn bootstrap",
    "stylelint": "stylelint",
    "lint": "node ./scripts/tslint.js",
    "lint:fix": "node ./scripts/tslint.js --fix",
    "publish": "node ./scripts/publish.js",
    "alpha": "node ./scripts/alpha.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn run lint",
        "prettier --write",
        "git add"
      ],
      "*.{css,sass,scss,less,sss}": [
        "stylelint",
        "git add"
      ]
    },
    "ignore": [
      "*.min.{js,css}"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "chokidar": "^2.1.6",
    "codecov": "^3.6.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "flow-bin": "^0.99.1",
    "fs-extra": "^9.0.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.14.1",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "slash": "^3.0.0",
    "styled-components": "^4.2.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "terser": "^3.17.0",
    "through2": "^3.0.1",
    "ts-jest": "^24.1.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.9.6",
    "vinyl-fs": "^3.0.3"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.2.0"
  },
  "files": [
    "dist",
    "interface",
    "npm-shrinkwrap.json"
  ],
  "main": "dist",
  "dependencies": {
    "debug": "^4.1.1",
    "react": "^16.8.6"
  }
}
